<!DOCTYPE html>
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>
	<meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Default Application</title>
</head>
<body>
  <h1>Default Application</h1>
  <!-- Begin Flash Notices -->
  <% if flash[:alert] %>
    <div class="row">
      <div class="small-12 columns">
        <div data-alert class="alert-box alert"><%= flash[:alert] %><a href="#" class="close">&times;</a></div>
      </div>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="row">
      <div class="small-12 columns">
        <div data-alert class="alert-box"><%= flash[:notice] %><a href="#" class="close">&times;</a></div>
      </div>
    </div>
  <% end %>
  <% if flash[:success] %>
    <div class="row">
      <div class="small-12 columns">
        <div data-alert class="alert-box success"><%= flash[:success] %><a href="#" class="close">&times;</a></div>
      </div>
    </div>
  <% end %>
  <!-- End Flash Notices -->

  <%= yield %>

  <p>&copy; 2013 Sam Stelfox. All Rights Reserved.</p>
</body>
</html>
